{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "preserveConstEnums": true,
    "jsx": "react-jsx",
    "paths": {
      /* Core Domain */
      "@domain/*": ["./src/core/domain/*"],

       /* Core Navigation */
      "@navigation/*": ["./src/core/navigation/*"],

      /* UI User Interface */
      "@global/*": ["./src/components/global/*"],
      "@modules/*": ["./src/components/modules/*"],
      "@pages/*": ["./src/components/pages/*"],

      /* Design System*/
      "@design-system/*": ["./src/design-system/*"],

      /* Infrastructure */
      "@state/*": ["./src/infra/state/*"],

      /* Static Resources */
      "@styles/*": ["./src/static/styles/*"],
      "@icons/*": ["./src/static/icons/*"],
      "@img/*": ["./src/static/img/*"],
    }
  },
  "include": [
    "src/**/**/*"
  ]
}
{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      /* Domain */
      "@domain/*": ["./src/core/domain/*"],

      /* UI (User Interface */
      "@global/*": ["./src/ui/global/*"],
      "@modules/*": ["./src/ui/modules/*"],

      /* Design System*/
      "@design-system/*": ["./src/ui/design-system/*"],

      /* Infrastructure */
      "@pages/*": ["./src/infra/routing/pages/*"],
      "@state/*": ["./src/infra/state/*"],

      /* Static Resources */
      "@styles/*": ["./src/static/styles/*"],
      "@icons/*": ["./src/static/icons/*"],
      "@img/*": ["./src/static/img/*"],
    }
  },
  "include": [
    "src"
  ]
}